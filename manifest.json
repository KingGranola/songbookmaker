{
  "name": "Songbook Maker",
  "short_name": "Songbook",
  "description": "弾き語り向け A4サイズの歌詞＋コードネームが一体になった歌本メーカー",
  "version": "0.3.1",
  "start_url": "/",
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#3b82f6",
  "background_color": "#ffffff",
  "scope": "/",
  "icons": [
    {
      "src": "assets/icons/favicon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "新しい楽譜",
      "short_name": "新規作成",
      "description": "新しい楽譜を作成",
      "url": "/?action=new",
      "icons": [
        {
          "src": "icons/shortcut-new.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "PDF書き出し",
      "short_name": "PDF出力",
      "description": "現在の楽譜をPDFとして書き出し",
      "url": "/?action=print",
      "icons": [
        {
          "src": "icons/shortcut-print.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "categories": ["music", "productivity", "utilities"],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/json": [".json"]
      }
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "screenshots": [
    {
      "src": "screenshots/desktop-main.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Desktop main interface"
    },
    {
      "src": "screenshots/mobile-main.png",
      "sizes": "360x640",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile main interface"
    }
  ]
}
